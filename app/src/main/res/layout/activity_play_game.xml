<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00B53E"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dealer"
                android:textSize="24sp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b6b6b6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:src="@drawable/card_back_side"
                    android:id="@+id/card_back_side"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="88dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="4dp"
                    android:id="@+id/dealer_cards_view_layout">

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b6b6b6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Score:"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/dealer_card_score"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#b6b6b6"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash $:"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/dealer_cash"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b6b6b6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center">

            <Button
                android:layout_width="58dp"
                android:layout_height="56dp"
                android:background="#B094CA"
                android:layout_gravity="center_vertical"
                android:text="Hit"
                android:id="@+id/draw_card" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:rotation="90"
                android:layout_centerInParent="true"
                android:src="@drawable/card_back_deck" />

            <Button
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="#FFDD00"
                android:layout_gravity="center_vertical"
                android:text="Stand"
                android:id="@+id/stop_draw_card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b6b6b6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Score:"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/player_card_score"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#b6b6b6"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cash $:"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:id="@+id/player_cash"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b6b6b6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="4dp"
                android:id="@+id/player_cards_view_layout">


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#b6b6b6"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="You"
                android:textSize="24sp"
                android:textColor="#000000"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#6c4300"
        android:layout_alignParentLeft="true"/>

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="#6c4300"
        android:layout_alignParentRight="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#6c4300"
        android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#6c4300"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>